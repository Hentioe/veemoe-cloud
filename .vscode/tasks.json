    "tasks": [
        {
            "label": "starting",
            "type": "crystal",
            "command": "run",
            "file": "src/veemoe_cloud.cr",
            "problemMatcher": []
        },
        {
            "label": "testing",
            "type": "crystal",
            "options": {
                "env": {
                    "VEEMOE_CLOUD_ENV": "test"
                }
            },
            "command": "spec",
            "problemMatcher": []
        },
        {
            "label": "assets: watching",
            "type": "npm",
            "script": "watch",
            "path": "assets/",
            "problemMatcher": []
        },
        {
            "label": "assets: deploy",
            "type": "npm",
            "script": "deploy",
            "path": "assets/",
            "problemMatcher": []
        },
        {
            "label": "assets: deps install",
            "type": "npm",
            "script": "install",
            "path": "assets/",
            "problemMatcher": []
        }
    ]
