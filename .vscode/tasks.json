    "version": "2.0.0",
    "tasks": [
        {
            "label": "Starting",
            "type": "crystal",
            "command": "run",
            "file": "src/veemoe_cloud.cr",
            "problemMatcher": []
        },
        {
            "label": "Testing",
            "type": "crystal",
            "options": {
                "env": {
                    "VEEMOE_CLOUD_ENV": "test"
                }
            },
            "command": "spec",
            "problemMatcher": []
        },
        {
            "label": "Assets watching",
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "watch",
                "--prefix=assets"
            ],
            "problemMatcher": [],
        }
    ]
}